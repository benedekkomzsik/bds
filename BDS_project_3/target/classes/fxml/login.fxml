<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.but.feec.bds.controllers.LoginController">
    <Label text="Sign In" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameTextField" promptText="Username" maxWidth="200"/>
    <PasswordField fx:id="passwordTextField" promptText="Password" maxWidth="200"/>
    <Button fx:id="signInButton" text="Sign In" onAction="#signInActionHandler" maxWidth="200"/>
    <Label fx:id="errorLabel" textFill="red" />
</VBox>

